<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Grocery"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wqweqw" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_x="0dp"
        android:layout_y="1dp" >
    </ListView>

    <Button
        android:id="@+id/Bfast"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="723dp"
        android:text="Breakfast" />

    <Button
        android:id="@+id/Go"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_x="11dp"
        android:layout_y="802dp"
        android:text="Go" />

    <Button
        android:id="@+id/Dinner"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_x="435dp"
        android:layout_y="723dp"
        android:text="Dinner" />

    <Button
        android:id="@+id/Grow"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="439dp"
        android:layout_y="800dp"
        android:text="Grow" />

    <Button
        android:id="@+id/Lunch"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_x="233dp"
        android:layout_y="727dp"
        android:text="Lunch" />

    <Button
        android:id="@+id/Glow"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_x="241dp"
        android:layout_y="800dp"
        android:text="Glow" />

</AbsoluteLayout>